{% extends 'fshablon0.twig' %}
{% block style %}
    background: url('/Final/public/images/gachiback33.jpg') no-repeat fixed;
{% endblock %}
{% block content %}

    <form method="post">
        <div class="tabletext">
            <label class="tablelabel">Фамилия (ОБЯЗАТЕЛЬНО ДЛЯ ЗАПОЛНЕНИЯ)</label>
            <input class="tableform" name="surname" type="text" value="{{ gachimuchenik.getSurname() }}">
        </div>
        <div class="tabletext">
            <label class="tablelabel">Имя (ОБЯЗАТЕЛЬНО ДЛЯ ЗАПОЛНЕНИЯ)</label>
            <input class="tableform" name="name" type="text" value="{{ gachimuchenik.getName() }}">
