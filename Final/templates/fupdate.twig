            <input class="tableform" name="rang" type="text" value="{{ gachimuchenik.getRang() }}">
        </div>
        <div class="tabletext">
            <label class="tablelabel">Зарплата в ♂bucks♂ах (ОБЯЗАТЕЛЬНО ДЛЯ ЗАПОЛНЕНИЯ)</label>
            <input class="tableform" name="ZarplataInBucks" type="text" value="{{ gachimuchenik.getZarplataInBucks() }}">
        </div>
        <button class="buttoncreate" type="submit">Подтвердить изменения</button>
    </form>
{% endblock %}